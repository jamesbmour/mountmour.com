---
import type { MarkdownHeading } from "astro";
import MoreMenu from "../RightSidebar/MoreMenu.astro";
import TableOfContents from "../RightSidebar/TableOfContents";

type Props = {
  title: string;
  headings: MarkdownHeading[];
  editUrl: string;
};

const { title, headings, editUrl } = Astro.props;
---
<!--PageContent.astro -->
<!-- TODO: Need to make the maps larger if no text is present -->
<article id="article" class="w-full h-full flex flex-col pt-6 px-4">
  <section class="mb-12">
    <h1 class="font-bold text-center text-2xl md:text-3xl lg:text-4xl" id="overview">
      {title}
    </h1>
    
    <!-- Table of Contents for Small Screens -->
    <nav class="block sm:hidden mt-4">
      <TableOfContents client:media="(max-width: 40em)" headings={headings} />
    </nav>
    
    <!-- Main Content Slot -->
    <div class="mt-6">
      <slot />
    </div>
  </section>
  
  <!-- More Menu for Small Screens -->
  <nav class="block sm:hidden mt-auto">
    <MoreMenu editHref={editUrl} />
  </nav>
</article>