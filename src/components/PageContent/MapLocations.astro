  },
  {
    title: "City Market",
    address: "711 E Cooper Ave, Aspen, CO 81611",
    mapUrl: "https://maps.app.goo.gl/hWniv5gfDyCHPvEs5",
    embedUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3092.4515283484648!2d-106.81838392404926!3d39.18718777166363!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87403bd84ff6cf43%3A0x4ec99374e318c58b!2sCity%20Market!5e0!3m2!1sen!2sus!4v1727241758086!5m2!1sen!2sus"
  },
  {
    title: "Liquor Store",
    address: "710 E Durant Ave, Aspen, CO 81611",
    mapUrl: "https://maps.app.goo.gl/cVWfmSAGG4exrtXC6",
    embedUrl: "https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d518.980042074563!2d-106.81579702841503!3d39.18718777310626!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87403bd8f3876cb3%3A0x7515eb3621043a87!2sAspen%20Grog%20Shop%20-%20Order%20Online*21!5e0!3m2!1sen!2sus!4v1727241952345!5m2!1sen!2sus"
  }
];
---
<!-- MapLocations.astro -->
<div class="max-w-4xl px-4 mx-auto sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
    {locations.map((location) => (
      <div class="overflow-hidden transition-all duration-300 rounded-lg shadow-lg bg-slate-800 hover:shadow-xl hover:scale-105">
        <div class="px-4 py-4 border-b border-slate-700">
          <h2 class="text-2xl font-bold text-slate-100" id={location.title.toLowerCase().replace(/\s+/g, '-')}>
            {location.title}
          </h2>
        </div>
        <div class="p-4">
          <div class="overflow-hidden rounded-md aspect-w-16 aspect-h-9">
            <iframe
              src={location.embedUrl}
              class="w-full h-full"
              style="border:0"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
        <div class="px-4 py-4 bg-slate-700">
          <a 
            href={location.mapUrl} 
            class="flex items-center justify-between text-sm font-medium transition-colors duration-200 text-cyan-400 hover:text-cyan-300"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span class="truncate">{location.address}</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    ))}
  </div>
</div>
