---
const footerSections = [
  {
    title: "Support",
    links: [
      { name: "Contact", href: "#" },
      { name: "Documentation", href: "#" },
    ],
  },
  {
    title: "Company",
    links: [
      { name: "About", href: "#" },
      { name: "Blog", href: "#" },
    ],
  },
];
---

<footer class="bg-gray-900" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="max-w-5xl px-4 py-8 mx-auto sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-3 lg:gap-8">
      <img class="h-6" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Company name">
      <div class="grid grid-cols-2 gap-4 mt-8 lg:col-span-2 lg:mt-0">
        {footerSections.map((section) => (
          <div>
            <h3 class="text-xs font-semibold tracking-wider text-white uppercase">{section.title}</h3>
            <ul role="list" class="mt-3 space-y-2">
              {section.links.map((link) => (
                <li>
                  <a href={link.href} class="text-xs text-gray-300 hover:text-white">{link.name}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>
</footer>
